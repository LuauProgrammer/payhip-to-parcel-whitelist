{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2022",
    "lib": [
      "es6"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
}